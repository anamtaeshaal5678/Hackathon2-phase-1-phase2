{
    "rewrites": [
        {
            "source": "/api/backend/:path*",
            "destination": "/api/index.py"
        }
    ],
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ]
}